= f.error_messages
%table
  %tr
    %td
      %p
        = f.label :name
        %br/
        = f.text_field :name
      %p
        = f.label :url
        %br/
        = f.text_field :url
      %p
        = f.label :phone_number
        %br/
        = f.text_field :phone_number, :size => 12
      %p
        = f.label :latitude
        \/  
        = f.label :longitude
        %br/
        = f.text_field :latitude, :size => 17
        \/
        = f.text_field :longitude, :size => 17        
      %p
        = button_to_function "Preview", "codeLatLng()"
      
      %p
        = f.label :embedded_media
        %br/
        = f.text_area :embedded_media, :rows => 5
      %p
        = f.label :attachment
        %br/
        = f.file_field :attachment
      %p
        = f.submit 'Create'
    %td{:style => "vertical-align:top;"}
